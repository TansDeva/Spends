<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="SplashActivityBinding"/>

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_launcher"
                android:layout_width="@dimen/splash_icon"
                android:layout_height="@dimen/splash_icon"/>

            <TextView
                android:id="@+id/tv_welcome_text"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/splash_text_size"
                android:layout_margin="@dimen/splash_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</layout>